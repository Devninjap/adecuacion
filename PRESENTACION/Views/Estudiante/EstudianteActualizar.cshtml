@model ENTIDADES.claseOperaciones

@{
    ViewBag.Title = "Index";
}

<div class="contenedor">
    <h1>ACTUALIZAR ESTUDIANTE</h1>
    @using (Html.BeginForm("EstudianteModificar", "Estudiante", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="columns">
            <div class="column is-6">
                <div class="field">
                    <label class="label">Apellidos</label>
                    <div class="control">
                        @Html.EditorFor(model => model.pEstudiante.apellidosEstudiante, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.pEstudiante.apellidosEstudiante, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="column is-6">
                <div class="field">
                    <label class="label">Nombres</label>
                    <div class="control">
                        @Html.EditorFor(model => model.pEstudiante.nombresEstudiante, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.pEstudiante.nombresEstudiante, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column is-2">
                <div class="field">
                    <label class="label">Codigo</label>
                    <div class="control">
                        @Html.EditorFor(model => model.pEstudiante.codEstudiante, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.pEstudiante.codEstudiante, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="column is-5">
                <div class="field">
                    <label class="label">Sede</label>
                    <div class="control">
                        @Html.EditorFor(model => model.pEstudiante.sede, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.pEstudiante.sede, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="column is-5">
                <div class="field">
                    <label class="label">Modalidad</label>
                    <div class="control">
                        @Html.EditorFor(model => model.pEstudiante.modalidad, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.pEstudiante.modalidad, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column is-12">
                <div class="field">
                    <label class="label">Carrera</label>
                    <div class="control">
                        @Html.EditorFor(model => model.pEstudiante.carrera, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.pEstudiante.carrera, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="button is-success is-outlined" />
                @Html.ActionLink("Retornar", "EstudianteListar", null, new { @class = "button is-danger is-outlined" })
            </div>
        </div>
    }
</div>